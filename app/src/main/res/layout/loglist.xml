<!--            android:id="@+id/timestamp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content" />-->
<!--    </RelativeLayout>-->
</LinearLayout>

</androidx.cardview.widget.CardView>

